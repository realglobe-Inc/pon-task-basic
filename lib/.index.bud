/**
 * Bud file for index.js
 */

'use strict'

const pkg = require('../package.json')
const path = require('path')
module.exports = [
  '.index.js.hbs',
  '.index.mjs.hbs',
].map((tmpl) => ({
  force: true,
  mode: '444',
  tmpl,
  path: path.basename(tmpl, '.hbs').replace(/^\./, ''),
  data: {
    pkg,
    subPacks: require('./define').subPacks
  }
}))

if (!module.parent) {
  require('coz').render(__filename)
}
